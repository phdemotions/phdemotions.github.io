<article class="post-card">
  <header>
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <div class="post-meta">
      <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      {% if post.data.tags %}
      <span class="post-tags" aria-label="Tags">
        {% for tag in post.data.tags %}
        <a href="/blog/tags/{{ tag | slugify }}/" class="tag">#{{ tag }}</a>
        {% endfor %}
      </span>
      {% endif %}
    </div>
  </header>

  {% if post.data.excerpt %}
  <p class="post-excerpt">{{ post.data.excerpt }}</p>
  {% else %}
  <p class="post-excerpt">{{ post.templateContent | excerpt }}</p>
  {% endif %}

  <a href="{{ post.url }}" class="read-more" aria-label="Read more of {{ post.data.title }}">Read more â†’</a>
</article>
