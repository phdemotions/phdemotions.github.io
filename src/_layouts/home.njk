<div class="container">
  {% if collections.featuredPosts.length > 0 %}
  <section class="section" aria-labelledby="featured-heading">
    <div class="section-header">
      <h2 id="featured-heading">Featured Posts</h2>
    </div>
    {% include "featured-carousel.njk" %}
  </section>
  {% endif %}

  <section class="section" aria-labelledby="latest-heading">
    <div class="section-header">
      <h2 id="latest-heading">Latest from the Blog</h2>
    </div>
    {% for post in collections.blog | limit(3) %}
      {% set post = post %}
      {% include "post-card.njk" %}
    {% endfor %}
    <div style="text-align: center; margin-top: var(--space-md);">
      <a href="/blog/" class="view-all">View all posts →</a>
    </div>
  </section>

  {% if collections.media.length > 0 %}
  <section class="section" aria-labelledby="media-heading">
    <div class="section-header">
      <h2 id="media-heading">Recent Media Appearances</h2>
    </div>
    <ul class="media-list">
      {% for item in collections.media | limit(3) %}
      <li class="media-item">
        <div class="media-outlet">{{ item.data.outlet }}</div>
        <h3 class="media-title"><a href="{{ item.data.url }}" target="_blank" rel="noopener noreferrer">{{ item.data.title }}</a></h3>
        <div class="media-date">
          <time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
        </div>
        {% if item.data.excerpt %}
        <p class="media-excerpt">{{ item.data.excerpt }}</p>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
    <div style="text-align: center; margin-top: var(--space-md);">
      <a href="/media/" class="view-all">View all →</a>
    </div>
  </section>
  {% endif %}
</div>
